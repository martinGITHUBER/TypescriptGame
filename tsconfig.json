{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"lib": ["es6", "dom", "es2017"],
		"target": "es6",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "public/js",
		"jsx": "react",
		"baseUrl": "./src/",
		"allowJs": true,
		"paths": {
			"*": [
				"node_modules/*"
			]
		}
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
	"public",
	"node_modules/*"
	]
}